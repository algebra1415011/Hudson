<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="buybooks.com.hudson">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".singleton.BackendVolley"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ScanActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:theme="@style/SplashTheme" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".user.UserIdeaActivity" android:screenOrientation="portrait"/>
        <activity android:name=".WelcomeActivity" android:screenOrientation="portrait"/>
        <activity android:name=".FirstActivity" android:screenOrientation="portrait" />
        <activity
            android:name=".user.UserCommentActivity"
            android:label="@string/title_activity_user_comment"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" android:screenOrientation="portrait" />
        <activity android:name=".ThanksActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>