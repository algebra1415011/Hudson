<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/usercomimg"
        android:layout_width="95dp"
        android:layout_height="98dp"
       android:layout_marginRight="10dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/usercommentidea"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/usercomimg"
        android:layout_toRightOf="@+id/usercomimg"
        android:scrollbars="vertical"
        android:text="Artificial intelligence (AI) is the simulation of human intelligence processes by machines, especially computer systems."
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:textStyle="bold" />
</RelativeLayout>